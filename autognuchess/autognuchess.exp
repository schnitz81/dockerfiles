#!/usr/bin/expect

set thinktime [lindex $argv 0]

spawn /usr/games/gnuchess --easy
sleep .5 
expect "*:*"

send -- "time $thinktime\r"
while { true } {
	expect {
		"\{Draw" { send -- "quit\n"; exit }
		"\{White" { send -- "quit\n"; exit }
		"\{Black" { send -- "quit\n"; exit }
		") :" { send -- "go\n"; exp_continue }
		eof {exp_continue} 
	}
}
done
